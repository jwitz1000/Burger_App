<div class="all">
  <h1>Burgers!</h1>
  <img class="burgerImg" src="/assets/images/burg.jpg" alt="burger">
  <div class="main row">
    <div class="col-sm-6">
      <h2>not Eaten Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <div>{{id}}. {{ burger_name}}</div>
        <button class="food" id="{{id}}" value="{{id}}">Devour!</button>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
      <h2>Eaten Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <div>{{id}}. {{ burger_name}}</div>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label>Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>
    <button type="submit">Add Burger</button>
  </form>
</div>