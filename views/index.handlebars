<div class="container">
  <h1>Burgers!</h1>
  </br>

  <img class="burgerImg" src="/assets/images/burg1.png" alt="burger">
  <br>
  <div class="main row">
    <div class="col-sm-6">
      <h2>Fresh Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <div class="burgerText">{{id}}. {{ burger_name}}</div>
        <button class="food btn btn-light" id="{{id}}" value="{{id}}">Devour!</button>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <div class="burgerText">{{id}}. {{ burger_name}}</div>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h3>Add a Burger</h3>
    </div>
  </div>
  <div class="row mid">
    <div class="col-sm-12">

      <form class="create-form">

        <div class="form-group">
          <label>Burger Name:</label>
          <input type="text" id="burger" name="name">
        </div>
        <button type="submit" class="btn btn-light">Add Burger</button>
      </form>
    </div>

  </div>
</div>